<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="IM_GUI.SecuredIM">
    <padding><Insets bottom="10" left="25" right="25" top="25" /></padding>
   <children>
   
       <!--add components-->
       <Label text="Welcome" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" />
       <!--Username-->
       <Label text="E-mail" GridPane.columnIndex="0" GridPane.rowIndex="1" />
       <TextField fx:id="userEmail" GridPane.columnIndex="1" GridPane.rowIndex="1" />
   
       <!--Lock key-->
       <Label text="Password" GridPane.columnIndex="0" GridPane.rowIndex="2" />
       <PasswordField fx:id="emailPass" GridPane.columnIndex="1" GridPane.rowIndex="2" />
   
       <!--Lock key-->
       <Label text="GPG pass" GridPane.columnIndex="0" GridPane.rowIndex="3" />
       <PasswordField fx:id="gpgPass" GridPane.columnIndex="1" GridPane.rowIndex="3" />
   
       <!--SMTP server-->
       <Label text="SMTP" GridPane.columnIndex="0" GridPane.rowIndex="4" />
       <TextField fx:id="smtp" GridPane.columnIndex="1" GridPane.rowIndex="4" />
   
       <!--SMTP server-->
       <Label text="IMAP" GridPane.columnIndex="0" GridPane.rowIndex="5" />
       <TextField fx:id="imap" GridPane.columnIndex="1" GridPane.rowIndex="5" />
   
       <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="6">
              <Button fx:id="test" onAction="#testConnect" text="Test Connect" />
              <Button fx:id="signIn" onAction="#handleLogin" text="Sign In" />
       </HBox>
</children>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>

    <!--actions-->

</GridPane>
